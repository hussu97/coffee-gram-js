<% include ../partials/header %>

<div class="container">
  <h1 id="formTitle">Create New Coffee</h1>
  <form action="/coffees" method="post">
    <div class="rows">
      <div class="form-group">
        <label for="coffeeName">Coffee name</label>
        <input type="text" class="form-control" id="coffeeName" name="name" aria-describedby="coffeeHelp" placeholder="Enter Coffee name">
      </div>
      <div class="form-group">
        <label for="coffeeName">Coffee Price</label>
        <input type="number" class="form-control" id="coffeeName" name="price" aria-describedby="coffeeHelp" placeholder="Enter Coffee price" min="1.00" step="0.25">
      </div>
      <div class="form-group">
        <label for="imageURL">Image URL</label>
        <input type="text" class="form-control" id="imageURL" name="image" aria-describedby="urlHelp" placeholder="Enter image url of Coffee">
        <small id="urlHelp" class="form-text text-muted">Image url must be in a certain format.</small>
      </div>
      <div class="form-group">
        <label for="coffeeDescription">Describe your coffee</label>
        <textarea class="form-control" id="coffeeDescription" rows="5" name="description"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-lg btn-outline-success btn-block">Submit</button>
      </div>
      <a href="/coffees">Back</a>
    </div>
  </form>
</div>

<% include ../partials/footer %>
